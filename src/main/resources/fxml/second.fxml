        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0"/>
    </padding>

    <Label text="Second Screen">
        <font>
            <Font size="32.0"/>
        </font>
    </Label>

    <Button text="Back" onAction="#handleBackButton"
            prefWidth="150.0" prefHeight="40.0">
