<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>

<VBox xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.bitbot.controller.TradingHistoryController" spacing="20">
    <padding>
        <Insets top="20" right="20" bottom="20" left="20"/>
    </padding>

    <!-- 헤더 -->
    <HBox spacing="20" alignment="CENTER_LEFT">
        <Label text="거래 내역" styleClass="title-label">
            <font>
                <Font size="28" name="Geist Mono Bold"/>
            </font>
        </Label>
        <Region HBox.hgrow="ALWAYS"/>
        <Button fx:id="backButton" text="← 뒤로" onAction="#handleBackButton" styleClass="back-button"/>
    </HBox>

    <!-- 거래 내역 테이블 -->
    <TableView fx:id="tradingHistoryTable" VBox.vgrow="ALWAYS" styleClass="trading-table">
        <columns>
            <TableColumn fx:id="dateColumn" text="날짜/시간" prefWidth="150"/>
            <TableColumn fx:id="symbolColumn" text="코인" prefWidth="100"/>
            <TableColumn fx:id="typeColumn" text="타입" prefWidth="80"/>
            <TableColumn fx:id="priceColumn" text="가격" prefWidth="120"/>
            <TableColumn fx:id="amountColumn" text="수량" prefWidth="120"/>
            <TableColumn fx:id="profitLossColumn" text="손익" prefWidth="120"/>
        </columns>
    </TableView>
</VBox>

