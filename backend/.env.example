# ===================================
# LLM Trading Bot Environment Variables
# ===================================
# 이 파일을 .env로 복사하고 실제 키 값을 입력하세요
# ⚠️ 절대로 .env 파일을 Git에 커밋하지 마세요!

# Gemini API (무료)
# https://aistudio.google.com/apikey 에서 발급
GEMINI_API_KEY=your_gemini_api_key_here

# Binance API (Testnet 권장)
# https://testnet.binance.vision/ 에서 발급
# ⚠️ 중요: Read-only 권한만 설정하거나 Testnet 키를 사용하세요
BINANCE_API_KEY=your_binance_api_key_here
BINANCE_SECRET_KEY=your_binance_secret_key_here
BINANCE_USE_TESTNET=true

# Supabase Database
# https://supabase.com 에서 프로젝트 생성
SUPABASE_URL=jdbc:postgresql://your-supabase-url.supabase.com:6543/postgres?sslmode=require
SUPABASE_USER=postgres.your_project_id
SUPABASE_PASSWORD=your_password
SUPABASE_ANON_KEY=your_anon_api_key_here

# Trading Settings
TRADING_MODE=SIMULATION  # SIMULATION, PAPER, LIVE
MAX_INVESTMENT_PERCENT=10
MAX_TOTAL_INVESTMENT_PERCENT=50
STOP_LOSS_PERCENT=-10
ANALYSIS_INTERVAL_MINUTES=15

# Risk Management
ENABLE_RISK_MANAGEMENT=true
MIN_CONFIDENCE_THRESHOLD=0.70

# Logging
LOG_LEVEL=INFO
LOG_TO_DATABASE=true

